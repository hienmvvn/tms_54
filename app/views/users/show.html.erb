<h3 class="text-center text-uppercase">
  <%= @user.name %><%= t "user.show.profile"%>
</h3>
<%= render "follow_form" %>
<div class="row">
  <div class="col-md-4">
    <div class="col-md-8 col-md-offset-2 center">
      <%= avatar_for @user %>
    </div>
  </div>
  <div class="col-md-8">
    <div class="table-responsive text-capitalize">
      <table class="table table-striped">
        <tr>
          <td class="col-md-4"><%= t "user.show.name" %></td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td><%= t "user.show.email" %></td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td><%= t "user.show.address" %></td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td><%= t "user.show.phone" %></td>
          <td><%= @user.name %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="col-sm-7">
    <div class="row">
      <div class="text-center">
        <h3>
          <%= t "course.title.processing" %>
        </h3>
      </div>
    </div>
    <% @user_courses.each do |user_course| %>
      <div class="row">
        <div class="col-sm-12">
          <h3>
            <%= link_to user_course.course.title, user_course %>
            <%= course_notice user_course %>
          </h3>
        </div>
        <h3 class="label label-primary">
          <%= t "subject.all_subject" %>
        </h3><br><br>
        <% user_course.user_subjects.each do |user_subject| %>
          <div class="col-sm-12">
            <div class="label label-info white-text">
              <%= link_to user_subject.subject.title, user_subject %>
            </div>
            <%= subject_notice user_subject %>
            <%= count_task user_subject %>
            <div class="well">
              <h4 class="label label-primary">
                <%= t "subject.tasks" %>
              </h4>
              <br><br>
              <% user_subject.subject.tasks.each do |task| %>
                <div class="row">
                  <% if user_subject.tasks.include? task %>
                    <div class="col-sm-10">
                      <div class="label label-success">
                        <%= task.title %>
                      </div>
                    </div>
                    <div class="col-sm-2">
                      <div class="label label-success">
                        <%= t "notice.finished" %>
                      </div>
                    </div>
                  <% else %>
                    <div class="col-sm-10">
                      <div class="label label-default">
                        <%= task.title %>
                      </div>
                    </div>
                  <% end %>
                </div>
                <br>
                <br>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
