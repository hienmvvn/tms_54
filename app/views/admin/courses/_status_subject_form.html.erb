<%= form_for [:admin, course_subject], remote: true do |f| %>
  <% if course_subject.in_process? %>
    <%= f.hidden_field :status, value: :closed %>
    <%= f.submit t("form.finish_subject"), class: "btn btn-warning" %>
  <% elsif course_subject.free? %>
    <%= f.hidden_field :status, value: :in_process %>
    <%= f.submit t("form.start_subject"), class: "btn btn-info" %>
  <% else %>
    <%= f.hidden_field :status, value: :in_process %>
    <%= f.submit t("form.start_subject"), class: "btn btn-primary" %>
  <% end %>
<% end %>
