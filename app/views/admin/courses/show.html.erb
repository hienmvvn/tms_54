<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <h3>
        <%= @course.title %>
      </h3>
      <div class="well">
        <%= @course.description %>
      </div>
      <br>
      <div class="col-sm-6" id="course-status-form-<%= @course.id %>">
        <%= render "status_form", course: @course %>
      </div>
    </div>
    <div class="col-sm-8">
      <div class="row">
        <div class="col-sm-12" id="course-subjects">
          <%= render "course_subjects" %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12" id="course-users">
          <%= render "course_users" %>
        </div>
      </div>
    </div>
  </div>
</div>
<% if @course.trainee_already_in_other_actived_course.present? %>
  <div class="alert alert-danger">
    <%= t "trainee_in_actived_course" %>
  </div>
<% end %>
