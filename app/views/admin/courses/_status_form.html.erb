<% if course.trainee_already_in_other_actived_course.present? %>
  <%= t "course.error.trainee_in_actived_course" %>
<% else %>
  <%= form_for [:admin, course], remote: true do |f| %>
    <% if course.in_process? %>
      <%= f.hidden_field :status, value: :closed %>
      <%= f.submit t("form.finish_course"), class: "btn btn-default" %>
    <% else %>
      <%= f.hidden_field :status, value: :in_process %>
      <%= f.submit t("form.start_course"), class: "btn btn-primary" %>
    <% end %>
  <% end %>
<% end %>
