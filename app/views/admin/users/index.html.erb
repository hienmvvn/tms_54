<% if can? :manage, :all %>
  <%= link_to t("user.create"), new_admin_user_path, class: "btn btn-primary" %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>
        <%= t "user.name" %>
      </th>
      <th>
        <%= t "user.email" %>
      </th>
      <th>
        <%= t "user.role" %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user|%>
      <tr>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= user.role %>
        </td>
        <% if can? :manage, :all %>
          <td>
            <%= link_to t("table.update"), edit_admin_user_path(user) %>
          </td>
          <td>
            <%= link_to t("table.delete"), [:admin, user], method: :delete,
              data: {confirm: t("confirm")} %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
  
</table>
